{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["_dist/**"]
    },
    "lint": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["lint"],
      "cache": false,
      "env": [
        "REDIS_CONTAINER_NAME",
        "REDIS_HOST",
        "REDIS_PORT",
        "MYSQL_CONTAINER_NAME",
        "MYSQL_HOST",
        "MYSQL_DATABASE",
        "MYSQL_USER",
        "MYSQL_ROOT_PASSWORD",
        "MYSQL_PORT",
        "POSTGRES_CONTAINER_NAME",
        "POSTGRES_HOST",
        "POSTGRES_DATABASE",
        "POSTGRES_USER",
        "POSTGRES_PASSWORD",
        "POSTGRES_PORT"
      ]
    },
    "release": {
      "dependsOn": ["lint", "test"],
      "cache": false
    }
  }
}
